<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activties.CreditsActivity">

    <android.support.v7.widget.Toolbar

        android:id="@+id/app_bar_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:theme="@style/AppTheme"
        app:title="Credits"
        >
    </android.support.v7.widget.Toolbar>

    <TextView
        android:textColor="@color/BLACK"
        android:id="@+id/thirdp"
        android:layout_margin="8dp"
        android:layout_below="@id/app_bar_credit"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/third_party_library"/>

    <TextView

        android:id="@+id/easydb"
        android:paddingStart="8dp"
        android:layout_margin="8dp"
        android:layout_below="@id/thirdp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EasyDB"/>

    <TextView
        android:textColor="@color/BLACK"
        android:id="@+id/iconc"
        android:layout_margin="8dp"
        android:layout_below="@id/easydb"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Icon Credit"/>

    <TextView

        android:id="@+id/flaticon"
        android:paddingStart="8dp"
        android:layout_margin="8dp"
        android:layout_below="@id/iconc"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Icon made by DinosoftLabs from www.flaticon.com"/>

</RelativeLayout>